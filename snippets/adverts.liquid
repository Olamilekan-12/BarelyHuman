<script>
  document.addEventListener('DOMContentLoaded', function () {
    var navContent = document.querySelectorAll('.nav-content');
    var currentIndex = 0;

    function showNextIndex() {
      navContent[currentIndex].classList.add('hidden');
      currentIndex = (currentIndex + 1) % navContent.length;
      navContent[currentIndex].classList.remove('hidden');
    }
    setInterval(showNextIndex, 5000);
  });
</script>
