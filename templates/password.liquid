<style>
  .register__container {
    width: 100%;
    min-height: 100vh;
    padding: 30px 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .register__wrapper {
    width: 90%;
    max-width: 500px;
    height: auto;
  }

  .register__text__description {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
    text-align: center;
    margin-bottom: 50px;
  }
  .register__text__description > :nth-child(1) {
    font-size: 36px;
    font-weight: 600;
  }

  .register__form {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 30px;
  }

  .input__field__container {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .input__field__container label {
    color: #292d34;
    font-size: 15px;
  }

  .input__field__container input {
    width: 100%;
    height: 50px;
    padding: 10px;
    border: none;
    border: 1px solid #babfc6;
    outline: none;
  }

  .input__field__container input::placeholder {
    color: #babfc6;
    font-size: 12px;
  }

  .submit__btn {
    width: 100%;
    height: 50px;
    background-color: black;
    color: white;
    border: none;
    outline: none;
    cursor: pointer;
  }

  .navigate__if__not {
    font-size: 14px;
    color: #606060;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .navigate__if__not > :nth-child(2) {
    font-weight: bold;
    text-decoration: none;
    color: #606060;
  }

  .short__input__wrapper {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .short__input__wrapper > .short {
    width: 45%;
    height: 100%;
  }
  @media screen and (max-width: 700px) {
    .register__text__description > :nth-child(1) {
      font-size: 28px;
      font-weight: 600;
    }
  }
</style>

<div class="register__container">
  <div class="register__wrapper">
    <div class="register__text__description">
      <h2>Reset Account Password</h2>
      <p>Please fill in the information below</p>
    </div>
    {% form 'reset_customer_password' %}
      <div class="register__form">
        <div class="input__field__container">
          <label for="password">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="passoword"
            placeholder="Type your password address here"
            required
          >
        </div>
        <div class="input__field__container">
          <label for="password_confirmation">Confirm Password</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            placeholder="Type your password address here"
            required
          >
        </div>
        <button type="submit" class="submit__btn">Reset Password</button>
      </div>
    {% endform %}

    <p class="navigate__if__not">
      <span>Already have an account?</span>
      <a href="/account/login">Login</a>
    </p>
  </div>
</div>
